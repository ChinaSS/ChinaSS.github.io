<div class="col-xs-12">	
	<form role="form" class="form-horizontal">
		  <div class="form-group">
			    <label class="col-sm-1 control-label" for="queryOpusName">作品名称:</label>
			    <div class="col-sm-3">
			    	<input type="text" class="form-control" id="queryOpusName" ng-model="opus.query.dto.opusName">
			    </div>
			    <label class="col-sm-1 control-label"  for="queryOpusType">作品类型:</label>
			    <div class="col-sm-3">
			    	<input type="text" class="form-control" id="queryOpusType" ng-model="opus.query.dto.opusType">
			    </div>
			  	<div class="col-sm-offset-1 col-sm-3">
			      <button type="button" class="btn btn-primary" ng-click="opus.query.query()">查询</button>
			      <button type="button" class="btn btn-primary" ng-click="opus.query.reset()">重置</button>
			    </div>			    
		  </div>
	</form>
</div>

<div class="col-xs-12">
    <div id="opusListId"></div>
</div>
<!-- 侧边弹出栏面板 -->
<div>
    <div ng-include src="opus.template.opusEdit"></div>
</div>

<!-- 选择艺术家 -->
<div id="artistGridDiv">
    <div ng-include src="opus.template.artistChoose"></div>
</div>
