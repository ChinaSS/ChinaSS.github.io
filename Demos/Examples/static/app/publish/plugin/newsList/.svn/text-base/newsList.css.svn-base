
/*公共样式-start*/
.clearfix:after {
    content: ".";
    display: block;
    height: 0;
    visibility: hidden;
    clear: both;
}
.clearfix {
    *zoom: 1;
}
.newsMainDotted,.newsSquareDashed,.newsNoneStyle,.newsStartStyle {
    height:auto;
    margin:0 auto;
}

.newsMainDotted ul,.newsSquareDashed ul,.newsNoneStyle ul,.newsStartStyle ul{
	    list-style-position:inside;
    margin: 0px;
    padding: 0px;
}

.newsMainDotted ul li, .newsSquareDashed ul li, .newsNoneStyle ul li, .newsStartStyle ul li{
    line-height:28px;
    text-align: left;
    color:#000000;
}

.newsMainDotted ul li a,.newsSquareDashed ul li a,.newsNoneStyle  ul li a,.newsStartStyle ul li a{
	font-size:14px ;
	font-family:"宋体";
	color: #333333;
    display:inline-block;
    text-decoration: none;
    color:#0044cc;
    vertical-align: middle;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.newsMainDotted ul li span,.newsSquareDashed ul li span,.newsNoneStyle ul li span{
    float:right;
    text-align: right;
    color: #999;
}

/*ul li:hover,ul li a:hover,.newsStartStyle span:hover{
    color: red;
    font-weight: bolder;
}*/
/*公共样式-end*/

/**
没有下划线和序号
*/
.newsMainDotted ul li{
    list-style-type:disc;
    border-bottom:dashed 1px #CCC;
}
/**
下划线是虚线
*/
 .newsSquareDashed ul li{
    list-style-type: square;
  /**  border-bottom:dashed 1px #CCC;
}
/**
去除下划线、序号及新闻字体颜色
*/
.newsNoneStyle ul li,.newsStartStyle ul li{
    list-style: none;
    /*border-bottom:dashed 1px #CCC;*/
  }
.newsNoneStyle ul li a{
    color: #000000;
}
/**
五角星序号
*/
.newsStartStyle span{
    color:#2c7659;
}
.newsSource,.getNews{
	display:none;
}
